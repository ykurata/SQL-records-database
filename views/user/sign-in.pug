extends ../layout

block content 
  div.container 
    h1 Sign In
    
    if(errors)
      h2.errors Ooops!
      ul.errors
        li= errors

    form(action='/user/signin', method="post")
      p 
        label(for="email") Email Address
        input#email(name="email", type="text")
      p 
        label(for="password") Password
        input#password(name="password", type="password")  
      p
        input(type='submit', value='Sign In')  
