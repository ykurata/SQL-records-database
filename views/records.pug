extends layout 

block content 
  h1 Records Database
  form(action='/records/search')
   input(type='search', name='term', placeholder='Search...')
   button(type="submit") Search 

  p
   a.button(href='/records/new') Create New Record
  table
    thead
      tr
        th Artist
        th Title
    tbody
      each record in records 
        tr 
          td
            a(href=`/records/${record.id}`)= record.artist 
          td
            a(href=`/records/${record.id}`)= record.title
