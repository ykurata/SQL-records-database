extends layout

block content 
  h1 Update Record  
    
  form(action=`/records/${record.id}`, method="post")
    p 
      label(for="artist") Artist's Name 
      input#artist(name="artist", type="text", value=record.artist)
    p 
      label(for="title") Album Title 
      input#title(name="title", type="text", value=record.title)
    p 
      label(for="genre") Genre
      select#genre(name="genre") 
        option(value=record.genre)= record.genre
        option(value="Rock") Rock 
        option(value="Pop") Pop
        option(value="Jazz") Jazz
        option(value="Folk") Folk
        option(value="Blues") Blues
        option(value="Hip hop") Hop hop
        option(value="Country") Country
        option(value="Classical") Classical
        option(value="Punk") Punk
        option(value="Dance Music") Dance Music
        option(value="Instrumental") Instrumental
        option(value="Other") Other
    p 
      label(for="speed") Speed
      input#speed(name="speed", type="number", value=record.speed)        
    p 
      label(for="sideA") Side A
      textarea#sideA(name="sideA", type="text")= record.sideA
    p 
      label(for="sideB") Side B 
      textarea#sideB(name="sideB", type="text")= record.sideB  
    p
      input(type='submit', value='Update Record')  
    p
      a.button(href='/records') Cancel
     
